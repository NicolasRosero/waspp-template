<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/black"
  android:id="@+id/sportsFragmentFile">

  <View
    android:id="@+id/sportsAccessoriesImg"
    android:layout_width="240dp"
    android:layout_height="240dp"
    android:layout_marginTop="20dp"
    android:background="@color/gray_ligth"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/sportsCategoryImg"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:contentDescription="@string/sportsCategoryDescImg"
    app:layout_constraintBottom_toBottomOf="@+id/sportsAccessoriesImg"
    app:layout_constraintEnd_toEndOf="@+id/sportsAccessoriesImg"
    app:layout_constraintStart_toStartOf="@+id/sportsAccessoriesImg"
    app:layout_constraintTop_toTopOf="@+id/sportsAccessoriesImg"
    app:srcCompat="@drawable/sports_category" />

  <TextView
    android:id="@+id/sportsLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:fontFamily="@font/adlam_display"
    android:text="@string/sportsCategoryDescImg"
    android:textAlignment="center"
    android:textColor="@color/white"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/sportsAccessoriesImg" />

  <TextView
    android:id="@+id/productsQuantityLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:fontFamily="@font/adlam_display"
    android:text="@string/productsQuantityInCategoryLabel"
    android:textAlignment="center"
    android:textColor="@color/white"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/sportsLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>